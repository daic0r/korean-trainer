<Application x:Class="LanguageTrainer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:model="clr-namespace:LanguageTrainer.Model"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <DataTemplate x:Key="WordTemplate" DataType="{x:Type model:LanguageWord}">
            <UniformGrid Columns="2" HorizontalAlignment="Stretch">
                <UniformGrid.Resources>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="FontFamily" Value="Courier New"/>
                        <Setter Property="FontSize" Value="18"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Foreground" Value="White"/>
                    </Style>
                </UniformGrid.Resources>
                <TextBlock Grid.Column="0" Text="{Binding Foreign}"/>
                <TextBlock Grid.Column="1" Text="{Binding Local}"/>
            </UniformGrid>
        </DataTemplate>
        
        <Style TargetType="{x:Type ListBox}">
            <Setter Property="Background" Value="DarkCyan"/>
        </Style>
    </Application.Resources>
</Application>
